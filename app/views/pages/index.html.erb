<section class="jumbotron text-center bg-white">
  <div class="container">
    <h1 class="jumbotron-heading">Get an offer on your items with a click of a button.</h1>
    <p class="lead text-muted">Sell your items whether used or new.</p>
    <p>
      <%= link_to "Browse items", items_path, class: "btn btn-primary my-2" %>
      <%= link_to "Sell your item", new_item_path, class: "btn btn-secondary my-2" %>
    </p>
  </div>
</section>
<div class="container pt-4 pb-4">
  <h1 class="text-center mb-3">How it works</h1>
  <div class="row">
    <div class="col-sm-4">
      <p class="text-center lead">Sign up</p>
      <p class="lead text-center text-muted">Sign up easily, with a few details.</p>
    </div>
    <div class="col-sm-4">
      <p class="text-center lead">Add your items</p>
      <p class="lead text-center text-muted">Add your items in less than a minute.</p>
    </div>
    <div class="col-sm-4">
      <p class="text-center lead">Wait for the call</p>
      <p class="lead text-center text-muted">Sit back relax and wait for potential buyers.</p>
    </div>
  </div>
</div>
<div class="album py-5 bg-light">
  <div class="container">
    <h2 class="text-center pb-4">Latest items</h2>
    <div class="row">
			<% @items.each do |item| %>
	      <div class="col-md-3 col-6">
	        <div class="card mb-4 box-shadow">
						<%= image_tag(item.image.url(:card), class: "card-img-top")%>
	          <div class="card-body">
	            <p class="card-text"><%= link_to item.name, item %></p>
	            <div class="d-flex justify-content-between align-items-center">
	              <!-- <div class="btn-group">
	                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
	                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
	              </div> -->
	              <small class="text-muted"><%= item.price %></small>
	            </div>
	          </div>
	        </div>
	      </div>
			<% end %>

    </div>
  </div>
</div>
